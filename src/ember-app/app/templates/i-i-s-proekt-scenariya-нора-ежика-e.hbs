<h3 class="ui header">{{t "forms.i-i-s-proekt-scenariya-нора-ежика-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.расположение
      class=(if (v-get validationModel "расположение" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-scenariya-нора-ежика-e.расположение-caption")
      data-test-i-i-s-proekt-scenariya-нора-ежика-e-расположение=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "расположение" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.количествоВходов
      class=(if (v-get validationModel "количествоВходов" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt-scenariya-нора-ежика-e.количествоВходов-caption")
      data-test-i-i-s-proekt-scenariya-нора-ежика-e-количествоВходов=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "количествоВходов" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt-scenariya-нора-ежика-e.ежик-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.ежик
      displayAttributeName="имя"
      autocomplete=true
      relationName="ежик"
      projection="ЕжикL"
      title=(t "forms.i-i-s-proekt-scenariya-нора-ежика-e.ежик-caption")
      readonly=readonly
      componentName="ежикLookup"
      class=(if (v-get validationModel "ежик" "isInvalid") "error")
      data-test-i-i-s-proekt-scenariya-нора-ежика-e-ежик=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "ежик" "message")}}
  </div>
</form>
